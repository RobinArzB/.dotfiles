general {
        colors = true
        interval = 1
}

order += "battery all"
order += "disk /"
order += "wireless wlo1"
order += "volume master"
order += "load"
order += "tztime local"

battery all {
        # format = "%status %percentage %remaining %emptytime"
        format = " %status %percentage %remaining "
        format_down = "No battery"
        last_full_capacity = true
        integer_battery_capacity = true
        status_chr = "âš¡"
        status_bat = "ðŸ”‹"
        status_unk = ""
        status_full = "â˜»"
        low_threshold = 15
        threshold_type = time
}


tztime local {
        format = "%d/%m/%Y %H:%M:%S"
}

load {
        format = "%1min"
}

disk "/" {
        format = "%avail"
}

volume master {
        format = "â™ª %volume"
